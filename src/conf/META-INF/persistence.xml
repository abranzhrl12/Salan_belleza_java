<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence 
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    
    <persistence-unit name="salon-belleza-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <!-- Entidades -->
        <class>com.salonbelleza.model.Usuario</class>
        <class>com.salonbelleza.model.Empleado</class>
        
        <!-- Propiedades de conexión -->
        <properties>
            <!-- Configuración de la base de datos -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://mysql-107aa7fd-abranzhrl-4e03.b.aivencloud.com:20392/defaultdb?ssl-mode=REQUIRED&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="avnadmin"/>
            <property name="jakarta.persistence.jdbc.password" value="AVNS_GZboWAl71WBqaN0vBCh"/>
            
            <!-- Configuración de Hibernate -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            
